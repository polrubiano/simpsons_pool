<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_m">

    <ImageView
        android:id="@+id/error_image"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_circle"
        android:clipToOutline="true"
        android:contentDescription="@string/str_imageErrorContentDescription"
        android:scaleType="centerCrop"
        tools:src="@drawable/error_unknown" />

    <TextView
        android:id="@+id/error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_l"
        android:gravity="center"
        android:textSize="@dimen/sp_l"
        android:textStyle="bold"
        tools:text="Error Title" />

    <TextView
        android:id="@+id/error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_s"
        android:gravity="center"
        android:textSize="@dimen/sp_m"
        tools:text="Error message describing what happened." />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/error_button_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_m"
        android:text="@string/str_retry"
        android:textSize="@dimen/sp_m" />
</LinearLayout>
